pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                script {
                    checkout scm
                }
            }
        }
        
        stage('Build') {
            steps {
                bat 'echo "Building application..."'
                bat 'dir'  // Windows equivalent of 'ls'
                // Add your actual build commands
                // bat 'mvn clean package'  // for Java
                // bat 'npm install'        // for JavaScript
                // bat 'python -m pip install -r requirements.txt'  // for Django
            }
        }
        
        stage('Test') {
            steps {
                bat 'echo "Running tests..."'
                // Add your test commands
                // bat 'mvn test'
                // bat 'npm test'
                // bat 'python manage.py test'
            }
        }
        
        stage('Deploy') {
            steps {
                bat 'echo "Deploying application..."'
                // Add your deployment commands
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline completed!'
        }
        failure {
            bat 'echo "Pipeline failed!"'
        }
        success {
            bat 'echo "Pipeline succeeded!"'
        }
    }
}
